{
  "extends": "@vtex/tsconfig",
  "compilerOptions": {
    "lib": ["DOM"],
    "noEmitOnError": false,
    "typeRoots": ["node_modules/@types"],
    "types": ["node", "jest", "graphql"],
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2017",
	"allowSyntheticDefaultImports": true,
	"jsx": "react"
  },
  "include": ["./typings/*.d.ts", "./**/*.tsx", "./**/*.ts"]
}
